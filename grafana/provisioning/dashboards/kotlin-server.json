{
  "title": "Kotlin Server Dashboard",
  "uid": "kotlin-server",
  "timezone": "browser",
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "title": "Total Shipments",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0},
      "targets": [{
        "expr": "app_shipments_total",
        "refId": "A"
      }]
    },
    {
      "id": 2,
      "title": "Total Trucks",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 0},
      "targets": [{
        "expr": "app_trucks_total",
        "refId": "A"
      }]
    },
    {
      "id": 3,
      "title": "Total Employees",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 0},
      "targets": [{
        "expr": "app_employees_total",
        "refId": "A"
      }]
    },
    {
      "id": 4,
      "title": "Request Rate (req/s)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
      "targets": [{
        "expr": "rate(http_server_request_count_total[1m])",
        "legendFormat": "{{method}} {{path}}",
        "refId": "A"
      }]
    },
    {
      "id": 5,
      "title": "Average Response Time (seconds)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
      "targets": [{
        "expr": "rate(http_server_request_latency_seconds_sum[1m]) / rate(http_server_request_latency_seconds_count[1m])",
        "legendFormat": "{{method}} {{path}}",
        "refId": "A"
      }]
    },
    {
      "id": 6,
      "title": "Requests by Status Code",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
      "targets": [{
        "expr": "sum by(status) (rate(http_server_request_count_total[1m]))",
        "legendFormat": "HTTP {{status}}",
        "refId": "A"
      }]
    },
    {
      "id": 7,
      "title": "Total Requests",
      "type": "stat",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
      "targets": [{
        "expr": "sum(http_server_request_count_total)",
        "refId": "A"
      }]
    }
  ]
}